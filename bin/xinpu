#!/usr/bin/env python
from xinpu.app import Application
import os
import socket
import sys
import logging

if 'LOGLEVEL' in os.environ:
    logging.getLogger().setLevel(os.environ['LOGLEVEL'])

socket.setdefaulttimeout(10)

app = Application.initialize()
app.start()
try:
    sys.stdin.read()    # Block until any key pressed
finally:
    app.stop()          # Gracefully stop the application
