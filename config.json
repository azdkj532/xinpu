{
    "version": "1",
    "username": "sinvun",
    "format": "【{site}】{url} ({title})\n{summary}\n{image}",
    "throttle": 60,
    "backtrack": 7200,
    "feeds": [
        {
            "name": "中央社",
            "url": "http://feeds.feedburner.com/cnaFirstNews",
            "interval": 300,
            "options": {
                "link": "follow",
                "extract": ["image"],
                "content_filter": "(^（中央社[^）]+）|\\[\\[[^\\]]+\\]\\].+)"
            }
        },
        {
            "name": "科技新報",
            "url": "http://technews.tw/feed/",
            "interval": 600,
            "options": {
                "extract": ["image", "description"]
            }
        },
        {
            "name": "NPOst",
            "url": "http://npost.tw/feed",
            "interval": 14400,
            "options": {
                "extract": ["image", "description"]
            }
        },
        {
            "name": "花火",
            "url": "https://sparks.ntustudents.org/feed/",
            "interval": 43200,
            "options": {
                "extract": ["image"]
            }
        },
        {
            "name": "創用CC",
            "url": "http://creativecommons.tw/feed/blog",
            "interval": 43200
        }
    ]
